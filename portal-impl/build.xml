				</copy>

				<copy todir="${app.server.classes.portal.dir}">
					<fileset dir="src" includes="**/dependencies/**,**/service.xml" />
				</copy>

				<antcall target="compile" />
			</then>
			<else>
				<antcall target="build-common-java.deploy" />
			</else>
		</if>
	</target>

