<?xml version="1.0" encoding="UTF-8"?>

<beans
	default-init-method="afterPropertiesSet"
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd"
	>
	<!--ClusterLink based Portal Cache Cluster-->
	<!--messaging-->
	<bean id="destination.cache_cluster" class="com.liferay.portal.kernel.messaging.ParallelDestination">
		<property name="name" value="liferay/cache_cluster" />
	</bean>
	<bean id="messageListener.cache_cluster" class="com.liferay.portal.cache.cluster.clusterlink.messaging.ClusterLinkPortalCacheClusterRemoveListener">
		<constructor-arg ref="com.liferay.portal.kernel.cache.MultiVMPortalCacheManager"/>
	</bean>
	<bean id="messagingConfigurator.cache_cluster" class="com.liferay.portal.kernel.messaging.config.DefaultMessagingConfigurator" init-method="init" destroy-method="destroy">
		<property name="destinations">
			<list>
				<ref bean="destination.cache_cluster" />
			</list>
		</property>
		<property name="messageBus">
			<ref bean="com.liferay.portal.kernel.messaging.MessageBus" />
		</property>
		<property name="messageListeners">
			<map key-type="java.lang.String" value-type="java.util.List">
				<entry key="liferay/cache_cluster">
					<list value-type="com.liferay.portal.kernel.messaging.MessageListener">
						<ref bean="messageListener.cache_cluster" />
					</list>
				</entry>
			</map>
		</property>
	</bean>

	<bean id="com.liferay.portal.cache.cluster.clusterlink.ClusterLinkPortalCacheClusterChannelFactory" class="com.liferay.portal.cache.cluster.clusterlink.ClusterLinkPortalCacheClusterChannelFactory">
		<constructor-arg index="0" value="liferay/cache_cluster"/>
		<constructor-arg index="1">
			<list>
				<util:constant static-field="com.liferay.portal.kernel.cluster.Priority.LEVEL1" />
				<util:constant static-field="com.liferay.portal.kernel.cluster.Priority.LEVEL2" />
			</list>
		</constructor-arg>
	</bean>

	<!--PortalCacheClusterLink-->
	<bean id="com.liferay.portal.kernel.cache.cluster.PortalCacheClusterLink" class="com.liferay.portal.kernel.cache.cluster.PortalCacheClusterLink" destroy-method="destroy">
		<property name="channelNumber" value="2"/>
		<property name="portalCacheClusterChannelFactory" ref="com.liferay.portal.cache.cluster.clusterlink.ClusterLinkPortalCacheClusterChannelFactory"/>
	</bean>
	<bean id="com.liferay.portal.kernel.cache.cluster.PortalCacheClusterLinkUtil" class="com.liferay.portal.kernel.cache.cluster.PortalCacheClusterLinkUtil">
		<property name="portalCacheClusterLink" ref="com.liferay.portal.kernel.cache.cluster.PortalCacheClusterLink" />
	</bean>
</beans>