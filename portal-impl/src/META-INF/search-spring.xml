<?xml version="1.0" encoding="UTF-8"?>

<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd"
>

	<!-- Portal search engine -->

	<bean id="defaultSearchEngineName" class="java.lang.String">
		<constructor-arg index="0" type="java.lang.String" value="Lucene" />
	</bean>
	<bean id="indexSearcher.portal" class="com.liferay.portal.search.IndexSearcherImpl" />
	<bean id="indexWriter.portal" class="com.liferay.portal.search.IndexWriterImpl" />
	<bean id="com.liferay.portal.kernel.search.SearchEngineUtil" class="com.liferay.portal.kernel.search.SearchEngineUtil">
		<property name="defaultSearchEngineName" ref="defaultSearchEngineName" />
		<property name="portalSearchEngine">
			<bean class="com.liferay.portal.search.PortalSearchEngineImpl" />
		</property>
		<property name="searchEngine">
			<bean class="com.liferay.portal.search.SearchEngineImpl">
				<property name="searcher" ref="indexSearcher.portal" />
				<property name="writer" ref="indexWriter.portal" />
			</bean>
		</property>
		<property name="searchPermissionChecker">
			<bean class="com.liferay.portal.search.SearchPermissionCheckerImpl" />
		</property>
	</bean>

	<!-- Lucene search engine -->

	<bean id="indexSearcher.lucene" class="com.liferay.portal.search.lucene.LuceneIndexSearcherImpl" />
	<bean id="indexWriter.lucene" class="com.liferay.portal.search.lucene.LuceneIndexWriterImpl" />
	<bean id="searchEngine.lucene" class="com.liferay.portal.search.lucene.LuceneSearchEngineImpl">
		<property name="name" ref="defaultSearchEngineName" />
		<property name="searcher" ref="indexSearcher.lucene" />
		<property name="writer" ref="indexWriter.lucene" />
	</bean>

	<!-- Search Messaging -->

	<bean id="destination.search_reader" class="com.liferay.portal.kernel.messaging.ParallelDestination">
		<constructor-arg index="0" type="java.lang.String" value="liferay/search_reader" />
	</bean>
	<bean id="destination.search_reader.response" class="com.liferay.portal.kernel.messaging.ParallelDestination">
		<constructor-arg index="0" type="java.lang.String" value="liferay/search_reader/response" />
	</bean>
	<bean id="destination.search_writer" class="com.liferay.portal.kernel.messaging.SerialDestination">
		<constructor-arg index="0" type="java.lang.String" value="liferay/search_writer" />
	</bean>

	<bean id="messageListener.lucene_reader" class="com.liferay.portal.search.lucene.messaging.LuceneReaderMessageListener">
		<constructor-arg index="0" type="com.liferay.portal.kernel.messaging.sender.MessageSender" ref="com.liferay.portal.kernel.messaging.sender.MessageSender" />
		<property name="searchEngine" ref="searchEngine.lucene" />
	</bean>
	<bean id="messageListener.lucene_writer" class="com.liferay.portal.search.lucene.messaging.LuceneWriterMessageListener">
		<property name="searchEngine" ref="searchEngine.lucene" />
	</bean>
	<bean id="searchEngineMessagingConfigurator" class="com.liferay.portal.kernel.messaging.config.DefaultMessagingConfigurator" init-method="init" destroy-method="destroy">
		<property name="destinations">
			<list>
				<ref bean="destination.search_reader" />
				<ref bean="destination.search_reader.response" />
				<ref bean="destination.search_writer" />
			</list>
		</property>
		<property name="messageBus">
			<ref bean="com.liferay.portal.kernel.messaging.MessageBus" />
		</property>
		<property name="messageListeners">
			<map key-type="java.lang.String" value-type="java.util.List">
				<entry key="liferay/search_reader">
					<list value-type="com.liferay.portal.kernel.messaging.MessageListener">
						<ref bean="messageListener.lucene_reader" />
					</list>
				</entry>
				<entry key="liferay/search_writer">
					<list value-type="com.liferay.portal.kernel.messaging.MessageListener">
						<ref bean="messageListener.lucene_writer" />
					</list>
				</entry>
			</map>
		</property>
	</bean>
</beans>