<?xml version="1.0" encoding="UTF-8"?>

<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd"
>

	<bean id="com.liferay.portal.monitoring.MonitoringService.impl" class="com.liferay.portal.monitoring.impl.DefaultMonitoringServiceImpl">
		<property name="monitoringLevels">
			<map>
				<entry key="com.liferay.monitoring.PortalCluster" value="HIGH"/>
				<entry key="com.liferay.monitoring.PortletContainer" value="HIGH"/>
				<entry key="com.liferay.monitoring.PortalInstance" value="HIGH"/>
			</map>
		</property>
		<property name="dataSampleProcessors">
			<map>
				<entry key="com.liferay.monitoring.PortletContainer">
					<list>
						<bean class="com.liferay.portal.monitoring.statistics.portletcontainer.PortletContainersStatistics">
							<constructor-arg index="0" ref="com.liferay.portal.service.CompanyLocalService.impl" type="com.liferay.portal.service.CompanyLocalService"/>
						</bean>
					</list>
				</entry>
				<entry key="com.liferay.monitoring.PortalInstance">
					<list>
						<bean class="com.liferay.portal.monitoring.statistics.instance.PortalInstancesStatistics">
							<constructor-arg index="0" ref="com.liferay.portal.service.CompanyLocalService.impl" type="com.liferay.portal.service.CompanyLocalService"/>
						</bean>
					</list>
				</entry>
			</map>
		</property>
	</bean>
	<!-- monitoring messaging -->
	<bean id="destination.monitoring" class="com.liferay.portal.kernel.messaging.ParallelDestination">
		<constructor-arg index="0" type="java.lang.String" value="liferay/monitoring" />
	</bean>
	<bean id="messageListener.monitoring" class="com.liferay.portal.monitoring.messaging.MonitoringMessageListener">
		<constructor-arg index="0" ref="com.liferay.portal.monitoring.MonitoringService.impl"/>
	</bean>
	<bean id="monitoringMessagingConfigurator" class="com.liferay.portal.kernel.messaging.config.DefaultMessagingConfigurator" init-method="init" destroy-method="destroy">
		<property name="destinations">
			<list>
				<ref bean="destination.monitoring" />
			</list>
		</property>
		<property name="messageBus">
			<ref bean="com.liferay.portal.kernel.messaging.MessageBus" />
		</property>
		<property name="messageListeners">
			<map key-type="java.lang.String" value-type="java.util.List">
				<entry key="liferay/monitoring">
					<list value-type="com.liferay.portal.kernel.messaging.MessageListener">
						<ref bean="messageListener.monitoring" />
					</list>
				</entry>
			</map>
		</property>
	</bean>
	<!-- JMX -->
	<bean id="com.liferay.portal.monitoring.jmx.MonitoringServiceManagerMBean.impl" class="com.liferay.portal.monitoring.jmx.MonitoringServiceManager">
		<constructor-arg index="0" ref="com.liferay.portal.monitoring.MonitoringService.impl" type="com.liferay.portal.monitoring.MonitoringService"/>
	</bean>
	<bean id="com.liferay.portal.monitoring.jmx.ThreadLocalStatisticsCacheManagerMBean.impl" class="com.liferay.portal.monitoring.jmx.ThreadLocalStatisticsCacheManager"/>
	<bean id="com.liferay.portal.servlet.filters.monitor.jmx.InstrumentationFilterManagerMBean.impl" class="com.liferay.portal.servlet.filters.monitor.jmx.InstrumentationFilterManager"/>
	<bean id="com.liferay.portlet.InstrumentedInvokerPortletManager.impl" class="com.liferay.portlet.InstrumentedInvokerPortletManager"/>

	<bean id="exporter" class="org.springframework.jmx.export.MBeanExporter">
		<property name="beans">
			<map>
				<entry key="bean:name=com.liferay.portal.monitoring.MonitoringServiceManager" value-ref="com.liferay.portal.monitoring.jmx.MonitoringServiceManagerMBean.impl"/>
				<entry key="bean:name=com.liferay.portal.monitoring.ThreadLocalStatisticsCacheManager" value-ref="com.liferay.portal.monitoring.jmx.ThreadLocalStatisticsCacheManagerMBean.impl"/>
				<entry key="bean:name=com.liferay.portal.monitoring.InstrumentationFilterManager" value-ref="com.liferay.portal.servlet.filters.monitor.jmx.InstrumentationFilterManagerMBean.impl"/>
				<entry key="bean:name=com.liferay.portal.monitoring.InstrumentedInvokerPortletManager" value-ref="com.liferay.portlet.InstrumentedInvokerPortletManager.impl"/>
			</map>
		</property>
		<property name="server" ref="mbeanServer"/>
	</bean>

</beans>