<?xml version="1.0" encoding="UTF-8"?>

<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd"
>
	<!-- Portal Cluster Link -->
	<bean id="com.liferay.portal.cluster.PortalClusterLinkImpl" class="com.liferay.portal.cluster.PortalClusterLinkImpl">
		<constructor-arg index="0">
			<bean class="com.liferay.portal.kernel.cluster.messaging.PortalClusterForwardMessageListener" />
		</constructor-arg>
	</bean>

	<!-- Portal Cluster Util -->
	<bean class="com.liferay.portal.kernel.cluster.PortalClusterUtil">
		<constructor-arg index="0" ref="com.liferay.portal.cluster.PortalClusterLinkImpl" />
	</bean>

</beans>
