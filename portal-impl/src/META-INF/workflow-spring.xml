<?xml version="1.0" encoding="UTF-8"?>

<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd"
>

	<!-- Advice -->

	<bean id="com.liferay.portal.workflow.WorkflowProxyAdvice" class="com.liferay.portal.workflow.WorkflowProxyAdvice" />

	<!-- Base managers -->

	<bean id="com.liferay.portal.workflow.BaseWorkflowDefinitionManager" class="com.liferay.portal.workflow.BaseWorkflowDefinitionManager">
		<property name="singleDestinationSynchronousMessageSender">
			<bean class="com.liferay.portal.kernel.messaging.sender.DefaultSingleDestinationSynchronousMessageSender">
				<constructor-arg index="0" value="liferay/workflow_definition" />
				<constructor-arg index="1" ref="com.liferay.portal.kernel.messaging.sender.SynchronousMessageSender" />
			</bean>
		</property>
	</bean>
	<bean id="com.liferay.portal.workflow.BaseWorkflowInstanceManager" class="com.liferay.portal.workflow.BaseWorkflowInstanceManager">
		<property name="singleDestinationSynchronousMessageSender">
			<bean class="com.liferay.portal.kernel.messaging.sender.DefaultSingleDestinationSynchronousMessageSender">
				<constructor-arg index="0" value="liferay/workflow_instance" />
				<constructor-arg index="1" ref="com.liferay.portal.kernel.messaging.sender.SynchronousMessageSender" />
			</bean>
		</property>
	</bean>
	<bean id="com.liferay.portal.workflow.BaseTaskInstanceManager" class="com.liferay.portal.workflow.BaseTaskInstanceManager">
		<property name="singleDestinationSynchronousMessageSender">
			<bean class="com.liferay.portal.kernel.messaging.sender.DefaultSingleDestinationSynchronousMessageSender">
				<constructor-arg index="0" value="liferay/workflow_task" />
				<constructor-arg index="1" ref="com.liferay.portal.kernel.messaging.sender.SynchronousMessageSender" />
			</bean>
		</property>
	</bean>

	<!-- Utils -->

	<bean class="com.liferay.portal.kernel.workflow.WorkflowDefinitionManagerUtil">
		<property name="workflowDefinitionManager">
			<bean class="org.springframework.aop.framework.ProxyFactoryBean">
				<property name="interceptorNames">
					<list>
						<value>com.liferay.portal.workflow.WorkflowProxyAdvice</value>
					</list>
				</property>
				<property name="proxyInterfaces">
					<value>com.liferay.portal.kernel.workflow.WorkflowDefinitionManager</value>
				</property>
				<property name="target" ref="com.liferay.portal.workflow.BaseWorkflowDefinitionManager" />
			</bean>
		</property>
	</bean>
	<bean class="com.liferay.portal.kernel.workflow.WorkflowInstanceManagerUtil">
		<property name="workflowInstanceManager">
			<bean class="org.springframework.aop.framework.ProxyFactoryBean">
				<property name="interceptorNames">
					<list>
						<value>com.liferay.portal.workflow.WorkflowProxyAdvice</value>
					</list>
				</property>
				<property name="proxyInterfaces">
					<value>com.liferay.portal.kernel.workflow.WorkflowInstanceManager</value>
				</property>
				<property name="target" ref="com.liferay.portal.workflow.BaseWorkflowInstanceManager" />
			</bean>
		</property>
	</bean>
	<bean class="com.liferay.portal.kernel.workflow.TaskInstanceManagerUtil">
		<property name="taskInstanceManager">
			<bean class="org.springframework.aop.framework.ProxyFactoryBean">
				<property name="interceptorNames">
					<list>
						<value>com.liferay.portal.workflow.WorkflowProxyAdvice</value>
					</list>
				</property>
				<property name="proxyInterfaces">
					<value>com.liferay.portal.kernel.workflow.TaskInstanceManager</value>
				</property>
				<property name="target" ref="com.liferay.portal.workflow.BaseTaskInstanceManager" />
			</bean>
		</property>
	</bean>
	<bean class="com.liferay.portal.kernel.workflow.UserCredentialFactoryUtil">
		<property name="userCredentialFactory">
			<bean class="com.liferay.portal.workflow.UserCredentialFactoryImpl" />
		</property>
	</bean>

	<!-- Messaging -->

	<bean id="destination.workflow_definition" class="com.liferay.portal.kernel.messaging.ParallelDestination">
		<constructor-arg index="0" type="java.lang.String" value="liferay/workflow_definition" />
	</bean>
	<bean id="destination.workflow_instance" class="com.liferay.portal.kernel.messaging.ParallelDestination">
		<constructor-arg index="0" type="java.lang.String" value="liferay/workflow_instance" />
	</bean>
	<bean id="destination.workflow_task" class="com.liferay.portal.kernel.messaging.ParallelDestination">
		<constructor-arg index="0" type="java.lang.String" value="liferay/workflow_task" />
	</bean>
	<bean id="messagingConfigurator.workflow" class="com.liferay.portal.kernel.messaging.config.DefaultMessagingConfigurator" init-method="init" destroy-method="destroy">
		<property name="destinations">
			<list>
				<ref bean="destination.workflow_definition" />
				<ref bean="destination.workflow_instance" />
				<ref bean="destination.workflow_task" />
			</list>
		</property>
		<property name="messageBus">
			<ref bean="com.liferay.portal.kernel.messaging.MessageBus" />
		</property>
	</bean>
</beans>