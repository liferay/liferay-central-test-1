<?xml version="1.0" encoding="UTF-8"?>

<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd"
>

	<!-- Workflow Proxy-->

	<bean id="com.liferay.portal.kernel.workflow.proxy.WorkflowDefinitionManagerProxy" class="com.liferay.portal.kernel.workflow.proxy.WorkflowDefinitionManagerProxy">
		<constructor-arg index="0">
			<bean class="com.liferay.portal.kernel.messaging.sender.DefaultSingleDestinationMessageSender">
				<constructor-arg index="0" value="liferay/workflow_definition"/>
				<constructor-arg index="1" ref="com.liferay.portal.kernel.messaging.sender.MessageSender"/>
			</bean>
		</constructor-arg>
	</bean>
	<bean id="com.liferay.portal.kernel.workflow.proxy.ProcessInstanceManagerProxy" class="com.liferay.portal.kernel.workflow.proxy.ProcessInstanceManagerProxy">
		<constructor-arg index="0">
			<bean class="com.liferay.portal.kernel.messaging.sender.DefaultSingleDestinationMessageSender">
				<constructor-arg index="0" value="liferay/workflow_instance"/>
				<constructor-arg index="1" ref="com.liferay.portal.kernel.messaging.sender.MessageSender"/>
			</bean>
		</constructor-arg>
		<constructor-arg index="1">
			<bean class="com.liferay.portal.kernel.messaging.sender.DefaultSingleDestinationSynchronousMessageSender">
				<constructor-arg index="0" value="liferay/workflow_instance"/>
				<constructor-arg index="1" ref="com.liferay.portal.kernel.messaging.sender.SynchronousMessageSender"/>
			</bean>
		</constructor-arg>
	</bean>
	<bean id="com.liferay.portal.kernel.workflow.proxy.TaskInstanceManagerProxy" class="com.liferay.portal.kernel.workflow.proxy.TaskInstanceManagerProxy">
		<constructor-arg index="0">
			<bean class="com.liferay.portal.kernel.messaging.sender.DefaultSingleDestinationSynchronousMessageSender">
				<constructor-arg index="0" value="liferay/workflow_task"/>
				<constructor-arg index="1" ref="com.liferay.portal.kernel.messaging.sender.SynchronousMessageSender"/>
			</bean>
		</constructor-arg>
	</bean>

	<!-- Workflow Registry-->
	<bean id="com.liferay.portal.workflow.WorkflowRegistryImpl" class="com.liferay.portal.workflow.WorkflowRegistryImpl"/>
	<!-- Workflow Util -->

	<bean class="com.liferay.portal.kernel.workflow.WorkflowUtil">
		<constructor-arg index="0" ref="com.liferay.portal.kernel.workflow.proxy.WorkflowDefinitionManagerProxy"/>
		<constructor-arg index="1" ref="com.liferay.portal.kernel.workflow.proxy.ProcessInstanceManagerProxy"/>
		<constructor-arg index="2" ref="com.liferay.portal.kernel.workflow.proxy.TaskInstanceManagerProxy"/>
		<constructor-arg index="3" ref="com.liferay.portal.workflow.WorkflowRegistryImpl"/>
	</bean>
</beans>