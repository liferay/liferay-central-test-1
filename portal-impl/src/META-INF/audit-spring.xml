<?xml version="1.0" encoding="UTF-8"?>

<beans
	default-init-method="afterPropertiesSet"
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd"
>

	<!-- Proxy -->

	<bean id="com.liferay.portal.audit.AuditServiceProxyBean" class="com.liferay.portal.audit.AuditServiceProxyBean">
		<property name="singleDestinationSynchronousMessageSender">
			<bean class="com.liferay.portal.kernel.messaging.sender.DefaultSingleDestinationSynchronousMessageSender">
				<property name="destinationName" value="liferay/auditing" />
				<property name="synchronousMessageSender" ref="com.liferay.portal.kernel.messaging.sender.SynchronousMessageSender" />
			</bean>
		</property>
		<property name="singleDestinationMessageSender">
			<bean class="com.liferay.portal.kernel.messaging.sender.DefaultSingleDestinationMessageSender">
				<property name="destinationName" value="liferay/auditing" />
				<property name="messageSender" ref="com.liferay.portal.kernel.messaging.sender.MessageSender" />
			</bean>
		</property>
	</bean>

	<!-- Util -->

	<bean class="com.liferay.portal.kernel.audit.AuditServiceUtil">
		<property name="auditService">
			<bean class="org.springframework.aop.framework.ProxyFactoryBean">
				<property name="interceptorNames">
					<list>
						<value>baseMessagingProxyAdvice</value>
					</list>
				</property>
				<property name="proxyInterfaces">
					<value>com.liferay.portal.kernel.audit.AuditService</value>
				</property>
				<property name="target" ref="com.liferay.portal.audit.AuditServiceProxyBean" />
			</bean>
		</property>
	</bean>

	<!-- Messaging -->

	<bean id="destination.auditing" class="com.liferay.portal.kernel.messaging.ParallelDestination">
		<property name="name" value="liferay/auditing" />
	</bean>
	
	<bean id="messagingConfigurator.auditing" class="com.liferay.portal.kernel.messaging.config.DefaultMessagingConfigurator" init-method="init" destroy-method="destroy">
		<property name="destinations">
			<list>
				<ref bean="destination.auditing" />
			</list>
		</property>
		<property name="messageBus">
			<ref bean="com.liferay.portal.kernel.messaging.MessageBus" />
		</property>
	</bean>
</beans>