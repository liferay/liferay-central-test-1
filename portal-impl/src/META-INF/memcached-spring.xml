<?xml version="1.0" encoding="UTF-8"?>

<beans
	default-destroy-method="destroy"
	default-init-method="afterPropertiesSet"
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
>
	<!-- If using factory of memcached objects...
	<bean id="memcachedClientObjectFactory" class="com.liferay.portal.cache.memcached.factoryory.MemcachedClientPoolableObjectFactory">
		<property name="memcachedAddresses">
			<list value-type="java.lang.String">
				<value>localhost:11211</value>
			</list>
		</property>
		<property name="memcachedConnectionFactory">
			<bean class="net.spy.memcached.DefaultConnectionFactory" />
		</property>
	</bean>

	<bean id="com.liferay.portal.cache.memcached.factoryory.MemcachedClientPool" class="com.liferay.portal.cache.memcached.factoryory.PooledMemcachedClientFactory">
		<property name="memcachedClientPool">
			<bean class="org.apache.commons.factory.impl.GenericObjectPool">
				<property name="factory" ref="memcachedClientObjectFactory" />
				<property name="maxActive" value="50"/>
				<property name="minIdle" value="20"/>
				<property name="maxIdle" value="30"/>
			</bean>
		</property>
	</bean>

	<bean id="com.liferay.portal.kernel.cache.MultiVMPortalCacheManager" class="com.liferay.portal.cache.memcached.PooledMemcachePortalCacheManager">
		<property name="memcachedClientPool" ref="com.liferay.portal.cache.memcached.factoryory.MemcachedClientPool"/>
		<property name="timeout" value="250"/>
		<property name="timeoutTimeUnit" value="MILLISECONDS"/>
	</bean>-->

	<bean id="com.liferay.portal.cache.memcached.pool.MemcachedClientPool" class="com.liferay.portal.cache.memcached.factory.DefaultMemcachedClientFactory">
		<property name="memcachedAddresses">
			<list value-type="java.lang.String">
				<value>localhost:11211</value>
			</list>
		</property>
		<property name="memcachedConnectionFactory">
			<bean class="net.spy.memcached.BinaryConnectionFactory" />
		</property>		
	</bean>

	<!-- only rely upon memcached for multi-vm.  Single VM should still use ehcache -->
	<bean id="com.liferay.portal.kernel.cache.MultiVMPortalCacheManager" class="com.liferay.portal.cache.memcached.MemcachePortalCacheManager">
		<property name="memcachedClientPool" ref="com.liferay.portal.cache.memcached.pool.MemcachedClientPool"/>
		<property name="timeout" value="250"/>
		<property name="timeoutTimeUnit" value="MILLISECONDS"/>
	</bean>

</beans>