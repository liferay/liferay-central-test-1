<?xml version="1.0"?>

<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd"
>
	<bean id="com.liferay.portal.kernel.notifications.NotificationEventFactory.impl" class="com.liferay.portal.notifications.impl.NotificationEventFactoryImpl" />
    <bean id="com.liferay.portal.kernel.notifications.ChannelHubManager.impl" class="com.liferay.portal.notifications.impl.ChannelHubManagerImpl" >
        <property name="channelHubPrototype">
            <bean class="com.liferay.portal.notifications.impl.ChannelHubImpl">
                <constructor-arg index="0" type="long" value="-1"/>
                <property name="channelPrototype">
                    <bean class="com.liferay.portal.notifications.impl.ChannelImpl">
                        <property name="userNotificationEventLocalService" ref="com.liferay.portlet.usernotifications.service.UserNotificationEventLocalService"/>
                    </bean>
                </property>
            </bean>
        </property>
    </bean>

    <bean class="com.liferay.portal.kernel.notifications.util.NotificationEventFactoryUtil">
        <property name="channelEventFactory" ref="com.liferay.portal.kernel.notifications.NotificationEventFactory.impl"/>
    </bean>

    <bean class="com.liferay.portal.kernel.notifications.util.ChannelHubManagerUtil">
        <property name="channelHubManager" ref="com.liferay.portal.kernel.notifications.ChannelHubManager.impl"/>
    </bean>
</beans>