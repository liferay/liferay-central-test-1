<?xml version="1.0" encoding="UTF-8"?>

<beans
	default-init-method="afterPropertiesSet"
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd"
>
	<bean id="com.liferay.portal.cache.MultiVMPortalCacheManager" class="com.liferay.portal.cache.MemoryPortalCacheManager" />
	<bean id="com.liferay.portal.cache.SingleVMPortalCacheManager" class="com.liferay.portal.cache.MemoryPortalCacheManager" />

	<bean id="messagingConfigurator.core" class="com.liferay.portal.kernel.messaging.config.DefaultMessagingConfigurator" init-method="init" destroy-method="destroy">
		<property name="destinations">
			<list>
				<!--<ref bean="destination.global" />-->
				<ref bean="destination.message_bus_default_response" />
				<ref bean="destination.message_bus_message_status" />
			</list>
		</property>
		<property name="messageBus">
			<ref bean="com.liferay.portal.kernel.messaging.MessageBus" />
		</property>
	</bean>

	<bean id="com.liferay.portal.kernel.job.JobSchedulerUtil" class="com.liferay.portal.kernel.job.JobSchedulerUtil">
		<property name="jobScheduler">
			<bean class="com.liferay.portal.job.JobSchedulerImpl">
				<property name="scheduler">
					<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
						<property name="quartzProperties">
							<props>
								<prop key="org.quartz.threadPool.threadCount">3</prop>
								<prop key="org.quartz.threadPool.makeThreadsDaemons">true</prop>
								<prop key="org.quartz.scheduler.makeSchedulerThreadDaemon">true</prop>
							</props>
						</property>
					</bean>
				</property>
			</bean>
		</property>
	</bean>
	
</beans>
