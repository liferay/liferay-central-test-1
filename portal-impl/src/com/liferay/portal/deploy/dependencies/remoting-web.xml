<filter-mapping>
	<filter-name>Thread Local Filter</filter-name>
	<url-pattern>/axis/*</url-pattern>
</filter-mapping>
<filter-mapping>
	<filter-name>Thread Local Filter</filter-name>
	<url-pattern>/json/*</url-pattern>
</filter-mapping>
<filter-mapping>
	<filter-name>Thread Local Filter</filter-name>
	<url-pattern>/secure/*</url-pattern>
</filter-mapping>
