<?xml version="1.0"?>
<!DOCTYPE routes PUBLIC "-//Liferay//DTD Friendly URL Routes 6.0.0//EN" "http://www.liferay.com/dtd/liferay-friendly-url-routes_6_0_0.dtd">

<routes>
	<route>
		<pattern>/category</pattern>
		<default-parameter name="mbCategoryId">0</default-parameter>
		<default-parameter name="p_p_state">normal</default-parameter>
		<default-parameter name="struts_action">/message_boards/view</default-parameter>
	</route>
	<route>
		<pattern>/category/{\d+:mbCategoryId}</pattern>
		<default-parameter name="p_p_state">normal</default-parameter>
		<default-parameter name="struts_action">/message_boards/view</default-parameter>
	</route>
	<route>
		<pattern>/view_message/{\d+:messageId}</pattern>
		<default-parameter name="p_p_state">normal</default-parameter>
		<default-parameter name="struts_action">/message_boards/view_message</default-parameter>
	</route>
	<route>
		<pattern>/search</pattern>
		<default-parameter name="p_p_state">normal</default-parameter>
		<default-parameter name="struts_action">/message_boards/search</default-parameter>
	</route>
	<route>
		<pattern>/{topLink}</pattern>
		<default-parameter name="p_p_state">normal</default-parameter>
		<default-parameter name="struts_action">/message_boards/view</default-parameter>
	</route>
	<route>
		<pattern>/category/{p_p_state}</pattern>
		<default-parameter name="mbCategoryId">0</default-parameter>
		<default-parameter name="struts_action">/message_boards/view</default-parameter>
	</route>
	<route>
		<pattern>/category/{\d+:mbCategoryId}/{p_p_state}</pattern>
		<default-parameter name="struts_action">/message_boards/view</default-parameter>
	</route>
	<route>
		<pattern>/view_message/{\d+:messageId}/{p_p_state}</pattern>
		<default-parameter name="struts_action">/message_boards/view_message</default-parameter>
	</route>
	<route>
		<pattern>/search/{p_p_state}</pattern>
		<default-parameter name="struts_action">/message_boards/search</default-parameter>
	</route>
	<route>
		<pattern>/{topLink}/{p_p_state}</pattern>
		<default-parameter name="struts_action">/message_boards/view</default-parameter>
	</route>
</routes>