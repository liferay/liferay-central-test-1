<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 6.0.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_6_0_0.dtd">

<service-builder package-path="com.liferay.portlet.dynamicdatalists">
	<namespace>DDL</namespace>
	<entity name="DDLEntry" uuid="true" local-service="true" remote-service="true">

		<!-- PK fields -->

		<column name="entryId" type="long" primary="true" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="DDMStructureId" type="long" />
		<column name="entryKey" type="String" />
		<column name="name" type="String" localized="true" />
		<column name="description" type="String" />

		<!-- Finder methods -->

		<finder name="GroupId" return-type="Collection">
			<finder-column name="groupId" />
		</finder>
		<finder name="G_E" return-type="DDLEntry" unique="true">
			<finder-column name="groupId" />
			<finder-column name="entryKey" />
		</finder>

		<!-- References -->

		<reference package-path="com.liferay.portlet.dynamicdatamapping" entity="DDMStructure" />
	</entity>
	<entity name="DDLEntryItem" uuid="true" local-service="true" remote-service="false">

		<!-- PK fields -->

		<column name="entryItemId" type="long" primary="true" />

		<!-- Other fields -->

		<column name="classNameId" type="long" />
		<column name="classPK" type="long" />
		<column name="entryId" type="long" />

		<!-- Finder methods -->

		<finder name="EntryId" return-type="Collection">
			<finder-column name="entryId" />
		</finder>

		<!-- References -->

		<reference package-path="com.liferay.portlet.dynamicdatamapping" entity="DDMStructureLink" />
	</entity>
	<exceptions>
		<exception>EntryDDMStructureId</exception>
		<exception>EntryDuplicateEntryKey</exception>
		<exception>EntryEntryKey</exception>
		<exception>EntryName</exception>
	</exceptions>
</service-builder>