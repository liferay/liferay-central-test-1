<?xml version="1.0"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>

	<!-- Forms Beans -->

	<form-beans>
		<form-bean name="subscribeForm" type="com.sample.strutsglobal.struts.form.SubscribeForm" />
		<form-bean name="unsubscribeForm" type="com.sample.strutsglobal.struts.form.UnsubscribeForm" />
	</form-beans>

	<!-- Action Mappings -->

	<action-mappings>

		<!-- Test Struts -->

		<action path="/sample_struts_global_portlet/edit" forward="portlet.sample_struts_global_portlet.edit" />

		<action path="/sample_struts_global_portlet/help" forward="portlet.sample_struts_global_portlet.help" />

		<action path="/sample_struts_global_portlet/portlet_display_attributes" forward="portlet.sample_struts_global_portlet.portlet_display_attributes" />

		<action path="/sample_struts_global_portlet/portlet_session_attributes" forward="portlet.sample_struts_global_portlet.portlet_session_attributes" />

		<action path="/sample_struts_global_portlet/print" forward="portlet.sample_struts_global_portlet.print" />

		<action path="/sample_struts_global_portlet/subscribe" type="com.sample.strutsglobal.struts.action.SubscribeAction" name="subscribeForm" scope="session" validate="true" input="portlet.sample_struts_global_portlet.subscribe">
			<forward name="portlet.sample_struts_global_portlet.subscribe" path="portlet.sample_struts_global_portlet.subscribe" />
			<forward name="/sample_struts_global_portlet/subscribe_success" path="/sample_struts_global_portlet/subscribe_success" redirect="true" />
		</action>

		<action path="/sample_struts_global_portlet/subscribe_success" forward="portlet.sample_struts_global_portlet.subscribe_success" />

		<action path="/sample_struts_global_portlet/unsubscribe" type="com.sample.strutsglobal.struts.action.UnsubscribeAction" name="unsubscribeForm" scope="session" validate="true" input="portlet.sample_struts_global_portlet.unsubscribe">
			<forward name="portlet.sample_struts_global_portlet.unsubscribe" path="portlet.sample_struts_global_portlet.unsubscribe" />
			<forward name="/sample_struts_global_portlet/unsubscribe_success" path="/sample_struts_global_portlet/unsubscribe_success" redirect="true" />
		</action>

		<action path="/sample_struts_global_portlet/unsubscribe_success" forward="portlet.sample_struts_global_portlet.unsubscribe_success" />

		<action path="/sample_struts_global_portlet/upload" type="com.sample.strutsglobal.struts.action.UploadAction">
			<forward name="portlet.sample_struts_global_portlet.upload" path="portlet.sample_struts_global_portlet.upload" />
			<forward name="/sample_struts_global_portlet/upload_success" path="/sample_struts_global_portlet/upload_success" redirect="true" />
		</action>

		<action path="/sample_struts_global_portlet/upload_success" type="com.sample.strutsglobal.struts.action.UploadSuccessAction">
			<forward name="portlet.sample_struts_global_portlet.upload_success" path="portlet.sample_struts_global_portlet.upload_success" />
		</action>

		<action path="/sample_struts_global_portlet/user_attributes" forward="portlet.sample_struts_global_portlet.user_attributes" />

		<action path="/sample_struts_global_portlet/view" forward="portlet.sample_struts_global_portlet.view" />

		<action path="/sample_struts_global_portlet/view_chart" type="com.sample.strutsglobal.struts.action.ViewChartAction">
			<forward name="/common/error.jsp" path="/common/error.jsp" />
			<forward name="/common/null.jsp" path="/common/null.jsp" />
		</action>

		<action path="/sample_struts_global_portlet/x" type="com.sample.strutsglobal.struts.action.XAction">
			<exception key="error.sample.exception" type="com.sample.strutsglobal.SampleException" path="portlet.sample_struts_global_portlet.sample_exception" />
			<forward name="portlet.sample_struts_global_portlet.x" path="portlet.sample_struts_global_portlet.x" />
		</action>

		<action path="/sample_struts_global_portlet/y" type="com.sample.strutsglobal.struts.action.YAction">
			<forward name="portlet.sample_struts_global_portlet.y" path="portlet.sample_struts_global_portlet.y" />
		</action>

		<action path="/sample_struts_global_portlet/z" forward="portlet.sample_struts_global_portlet.z" />
	</action-mappings>

	<!-- Custom Request Processor -->

	<controller processorClass="com.sample.strutsglobal.struts.SampleRequestProcessor" />

	<!-- Message Resources -->

	<message-resources parameter="content.test.Language" />

	<!-- Tiles Plugin -->

	<plug-in className="org.apache.struts.tiles.TilesPlugin" >
		<set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml" />
		<set-property property="moduleAware" value="true" />
		<set-property property="definitions-parser-validate" value="true" />
	</plug-in>

	<!-- Validator Plugin -->

	<plug-in className="org.apache.struts.validator.ValidatorPlugIn">
		<set-property property="pathnames" value="/WEB-INF/validator-rules.xml,/WEB-INF/validation.xml" />
	</plug-in>
</struts-config>