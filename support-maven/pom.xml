<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.liferay.maven</groupId>
	<artifactId>maven-support</artifactId>
	<packaging>pom</packaging>
	<name>Liferay Maven 2 Support</name>
	<version>6.0.0-SNAPSHOT</version>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-javadoc-plugin</artifactId>
			</plugin>			
		</plugins>
	</build>
	<modules>
		<module>archetypes</module>
		<module>plugins</module>
	</modules>
	<repositories>
		<repository>
			<id>liferay</id>
			<name>Liferay Repository</name>
			<url>http://localhost/nexus/content/groups/public</url>
			<releases>
				<updatePolicy>never</updatePolicy>
			</releases>
		</repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<id>liferay</id>
			<name>Liferay Repository</name>
			<url>http://localhost/nexus/content/groups/public</url>
		</pluginRepository>
	</pluginRepositories>
	<distributionManagement>
		<repository>
			<id>liferay</id>
			<name>Liferay Releases Repository</name>
			<url>http://localhost/nexus/content/repositories/liferay-ce-releases</url>
		</repository>
		<snapshotRepository>
			<id>liferay</id>
			<name>Liferay Snapshot Repository</name>
			<url>http://localhost/nexus/content/repositories/liferay-ce-snapshots</url>
		</snapshotRepository>
	</distributionManagement>
	<properties>
		<liferay.version>6.0.0-SNAPSHOT</liferay.version>
		<maven.version>2.0.10</maven.version>
	</properties>
</project>