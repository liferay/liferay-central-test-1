<?xml version="1.0"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id="liferayDataSourceTarget" class="com.liferay.portal.spring.jndi.JndiObjectFactoryBean" lazy-init="true">
		<property name="jndiName">
			<value>jdbc/LiferayPool</value>
		</property>
	</bean>
	<bean id="liferayDataSource" class="org.springframework.jdbc.datasource.LazyConnectionDataSourceProxy" lazy-init="true">
		<property name="targetDataSource">
			<ref bean="liferayDataSourceTarget" />
		</property>
	</bean>
	<bean id="liferaySessionFactory" class="com.liferay.portal.spring.hibernate.HibernateConfiguration" lazy-init="true">
		<property name="dataSource">
			<ref bean="liferayDataSource" />
		</property>
	</bean>
	<bean id="liferayTransactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager" lazy-init="true">
		<property name="dataSource">
			<ref bean="liferayDataSource" />
		</property>
		<property name="sessionFactory">
			<ref bean="liferaySessionFactory" />
		</property>
	</bean>
	<bean id="com.liferay.counter.service.CounterLocalService.enterprise" class="com.liferay.portal.spring.ejb.LocalSessionFactoryBean" lazy-init="true">
		<property name="businessInterface">
			<value>com.liferay.counter.service.CounterLocalService</value>
		</property>
		<property name="jndiName">
			<value>ejb/liferay/CounterLocalServiceHome</value>
		</property>
	</bean>
	<bean id="com.liferay.counter.service.CounterLocalService.professional" class="com.liferay.counter.service.impl.CounterLocalServiceImpl" lazy-init="true" />
	<bean id="com.liferay.counter.service.CounterLocalService.transaction" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean" lazy-init="true">
		<property name="transactionManager">
			<ref bean="liferayTransactionManager" />
		</property>
		<property name="target">
			<ref bean="com.liferay.counter.service.CounterLocalService.professional" />
		</property>
		<property name="transactionAttributes">
			<props>
				<prop key="*">PROPAGATION_REQUIRES_NEW</prop>
			</props>
		</property>
	</bean>
	<bean id="com.liferay.counter.service.CounterLocalServiceFactory" class="com.liferay.counter.service.CounterLocalServiceFactory" lazy-init="true">
		<property name="service">
			<ref bean="com.liferay.counter.service.CounterLocalService.enterprise" />
		</property>
	</bean>
	<bean id="com.liferay.counter.service.CounterService.enterprise" class="com.liferay.portal.spring.ejb.RemoteSessionFactoryBean" lazy-init="true">
		<property name="businessInterface">
			<value>com.liferay.counter.service.CounterService</value>
		</property>
		<property name="jndiName">
			<value>com_liferay_counter_service_ejb_CounterServiceEJB</value>
		</property>
	</bean>
	<bean id="com.liferay.counter.service.CounterService.professional" class="com.liferay.counter.service.impl.CounterServiceImpl" lazy-init="true" />
	<bean id="com.liferay.counter.service.CounterService.transaction" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean" lazy-init="true">
		<property name="transactionManager">
			<ref bean="liferayTransactionManager" />
		</property>
		<property name="target">
			<ref bean="com.liferay.counter.service.CounterService.professional" />
		</property>
		<property name="transactionAttributes">
			<props>
				<prop key="*">PROPAGATION_REQUIRES_NEW</prop>
			</props>
		</property>
	</bean>
	<bean id="com.liferay.counter.service.CounterServiceFactory" class="com.liferay.counter.service.CounterServiceFactory" lazy-init="true">
		<property name="service">
			<ref bean="com.liferay.counter.service.CounterService.enterprise" />
		</property>
	</bean>
	<bean id="com.liferay.counter.service.persistence.CounterPersistence" class="com.liferay.counter.service.persistence.CounterPersistence" lazy-init="true">
		<property name="dataSource">
			<ref bean="liferayDataSource" />
		</property>
		<property name="sessionFactory">
			<ref bean="liferaySessionFactory" />
		</property>
	</bean>
	<bean id="com.liferay.counter.service.persistence.CounterUtil" class="com.liferay.counter.service.persistence.CounterUtil" lazy-init="true">
		<property name="persistence">
			<ref bean="com.liferay.counter.service.persistence.CounterPersistence" />
		</property>
	</bean>
</beans>