			value="&lt;jvm-options&gt;-Xmx768m&lt;/jvm-options&gt;&lt;jvm-options&gt;-XX:MaxPermSize=256m&lt;/jvm-options&gt;"
		/>

		<replace
			file="${app.server.parent.dir}/glassfishv3-prelude/glassfish/lib/registration/servicetag-registry.xml"
			token="GlassFish V3" value="Liferay ${lp.version} on GlassFish 3" summary="true"
		/>

		<antcall target="deploy-plugins">
			<param name="deployer.dest.dir" value="${app.server.glassfish.deploy.dir}" />
			<param name="deployer.app.server.type" value="glassfish-tomcat" />
			<param name="deployer.app.server.lib.portal.dir" value="${app.server.glassfish.lib.portal.dir}" />
