<div class="lfr-dock">
	<h2 class="user-greeting">
		<span>$user_greeting</span>
	</h2>

	<ul class="lfr-dock-list">
		#if ( $show_home )
			<li class="home">
				<a href="$home_url">$home_text</a>
			</li>
		#end

		#if ( $show_sign_in )
			<li class="sign-in">
				<a href="$sign_in_url">$sign_in_text</a>
			</li>
		#end

		#if ( $show_my_account )
			<li class="my-account">
				<a href="$my_account_url">$my_account_text</a>
			</li>
		#end

		#if ( $show_sign_out )
			<li class="sign-out">
				<a href="$sign_out_url">$sign_out_text</a>
			</li>
		#end

		#if ( $show_add_content )
			<li class="add-content">
				<a href="javascript: void(0);" onclick="$add_content_url">$add_content_text</a>
			</li>
			<li class="layout">
				<a href="javascript: void(0);" onclick="$layout_url">$layout_text</a>
			</li>
		#end

		#if ( $show_page_settings )
			<li class="page-settings">
				<a href="$page_settings_url">$page_settings_text</a>
			</li>
		#end

		<li class="my-places">
			<a>My Places</a>

			<ul>
				<li>
					<h3>My Community</h3>
					<ul>
						<li class="public"><a href="http://">Public Pages</a></li>
						<li class="private"><a href="http://">Private Pages</a></li>
					</ul>
				</li>
				<li>
					<h3>Guest</h3>
					<ul>
						<li class="public current"><a href="http://">Public Pages</a></li>
						<li class="private"><a href="http://">Private Pages</a></li>
					</ul>
				</li>
				<li>
					<h3>CMS</h3>
					<ul>
						<li class="public"><a href="http://">Public Pages</a></li>
						<li class="private"><a href="http://">Private Pages</a></li>
					</ul>
				</li>
			</ul>
		</li>
	</ul>
</div>