#set($tableStyle = "")
#if ($portletDisplay.isStateMin())
	#set($tableStyle = "style='display: none;'")
#end

#set($iconStyle = "")
#if (!$portletDisplay.isShowBackIcon())
	#set ($iconStyle = "style='display:none'")
#end

<table id="p_p_table_$portletDisplay.getId()" border="0" cellpadding="0" cellspacing="0" width="100%" $tableStyle>
<tr>
	<td>
		<div class="portlet-header-bar" id="portlet-header-bar_$portletDisplay.getId()"
			#if (!$portletDisplay.isShowBackIcon())
				onmouseover="PortletHeaderBar.show('$portletDisplay.getId()')"
				onmouseout="PortletHeaderBar.hide('$portletDisplay.getId()')"
			#end
		 >

			<div class="portlet-shadow-tl"><div></div></div>
			<div class="portlet-shadow-tr"><div></div></div>
			<div class="portlet-shadow-tc">

				<div class="portlet-header-decoration">
					<span class="portlet-title">$theme.iconPortlet() $portletDisplay.getTitle()</span>
				</div>

				<div class="portlet-small-icon-bar" $iconStyle>
					#if ($portletDisplay.isShowBackIcon())
						$theme.iconBack()
					#else
						$theme.iconRefresh()
						$theme.iconPortletCss()
						$theme.iconConfiguration()
						$theme.iconEdit()
						$theme.iconEditGuest()
						$theme.iconHelp()
						$theme.iconPrint()
						#if ($portletDisplay.isShowMinIcon())
							<a href="javascript: LiferayDesktop.minimize('$plid', '$portletDisplay.getId()', '$themeDisplay.getDoAsUserId()')"><img align="absmiddle" border="0" src="$themeDisplay.getPathThemeImages()/portlet/minimize.png" title="#language("minimize")" /></a>
						#end
 						$theme.iconMaximize()
						#if ($portletDisplay.isShowCloseIcon())
							<a href="javascript: LiferayDesktop.remove('$plid', '$portletDisplay.getId()', '$themeDisplay.getDoAsUserId()')"><img align="absmiddle" border="0" src="$themeDisplay.getPathThemeImages()/portlet/close.png" title="#language("close")" /></a>
						#end
					#end
				</div>

			</div>
		</div>
	</td>
</tr>
<tr>
	<td>
		<table border="0" cellpadding="0" cellspacing="0" width="100%">
		<tr>
			<td class="portlet-shadow-ml"><div></div></td>
			<td class="portlet-container" width="100%">

				<div id="p_p_body_$portletDisplay.getId()">
					$portletDisplay.getContent()
				</div>

			</td>
			<td class="portlet-shadow-mr"><div></div></td>
		</tr>
		</table>
	</td>
</tr>
<tr>
	<td>
		<div class="portlet-bottom-bar">
			<div class="portlet-shadow-bl"><div></div></div>
			<div class="portlet-shadow-br"><div></div></div>
			<div class="portlet-shadow-bc"></div>
		</div>

		#if (!$layoutTypePortlet.hasStateMax())
			<script type="text/javascript">
				Liferay.Portlet.ready("$portletDisplay.getId()", function() {
					LiferayDesktop.addIcon("$plid", "$portletDisplay.getId()", "$themeDisplay.getDoAsUserId()", $portletDisplay.isStateMin(), "$unicodeFormatter.toString($portletDisplay.getTitle())");
				});
			</script>
		#end

		#if ($portletDisplay.isStateMax())
			<script type="text/javascript">
				jQuery(window).load(function() {
					jQuery("#p_p_id_$portletDisplay.getId()_ .portlet-content-container").css({"height": (Viewport.page().y - 95) + "px"});;
				});
				jQuery(window).resize(function() {
					jQuery("#p_p_id_$portletDisplay.getId()_ .portlet-content-container").css({"height": (Viewport.frame().y - 95) + "px"});;
				});
			</script>
		#end
	</td>
</tr>
</table>