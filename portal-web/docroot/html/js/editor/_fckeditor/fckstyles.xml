<Styles>

	<Style name="Normal" element="p" />
	<Style name="Heading 1" element="h1" />
	<Style name="Heading 2" element="h2" />
	<Style name="Heading 3" element="h3" />
	<Style name="Heading 4" element="h4" />
	<Style name="Preformatted Text" element="pre" />
	<Style name="Cited Work" element="cite" />
	<Style name="Computer Code" element="code" />

	<Style name="Info Message" element="div">
		<Attribute name="class" value="portlet-msg-info" />
	</Style>

	<Style name="Alert Message" element="div">
		<Attribute name="class" value="portlet-msg-alert" />
	</Style>

	<Style name="Error Message" element="div">
		<Attribute name="class" value="portlet-msg-error" />
	</Style>

