.portlet-search {
	.entry-tags {
		margin: 3px 0 0;
	}

	.entry-title {
		font-size: 1.3em;
	}

	.more-results {
		font-size: 1.1em;
		padding: 5px 0;
	}

	.no-results {
		font-size: 1.3em;
		margin: 10px 0 0;
	}

