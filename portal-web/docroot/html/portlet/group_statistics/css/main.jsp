<%@ include file="/html/portlet/css_init.jsp" %>

.portlet-group-statistics {
	.group-statistics-body {
		border-collapse: collapse;
		border-spacing: 0;
		clear: both;
		display: table;
		table-layout: auto;
		width: 100%;
	}

	.group-statistics-chart {
		width: 100%;
	}

	.group-statistics-info {
		padding: 10px;
		padding-right: 0;

		table {
			margin-left: 10px;
		}

		td {
			padding: 0 3px;
		}
	}

	.group-statistics-color-marker {
		height: 8px;
		margin-right: 4px;
		width: 8px;
	}

	.aui-field-row .inline-text {
		margin: 1px 3px 0 0;
		padding: 1px;
	}
}