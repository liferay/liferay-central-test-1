	<target name="test-db-oracle-latest-smoke-test">
		<echo file="create-${db.oracle.username}.sql"><![CDATA[drop user &1 cascade;
create user &1 identified by &2;
grant connect,resource to &1;
exit;]]></echo>

		<antcall target="prepare-db-oracle-common">
			<param name="skip.prepare-bundle" value="true" />
			<param name="sql.dir" value="" />
			<param name="sql.file" value="create-${db.oracle.username}.sql" />
		</antcall>

		<antcall target="run-smoke-test">
			<param name="build.app.server" value="false" />
		</antcall>

		<delete file="create-${db.oracle.username}.sql" />
	</target>

