<?xml version="1.0"?>

<project name="portal-test-db-mysql" basedir="." default="test" xmlns:antelope="antlib:ise.antelope.tasks">
	<import file="build-test.xml" />

	<target name="test-db-mysql">
		<antcall target="prepare-mysql" />

		<ant antfile="build-dist.xml" target="build-dist-tomcat" />

		<antcall target="test-db-mysql-latest" />
		<antcall target="test-db-mysql-5.1.0" />
		<antcall target="test-db-mysql-5.1.1" />
		<antcall target="test-db-mysql-5.1.2" />
		<antcall target="test-db-mysql-5.2.0" />
		<antcall target="test-db-mysql-5.2.1" />
		<antcall target="test-db-mysql-5.2.2" />
		<antcall target="test-db-mysql-5.2.3" />
	</target>

	<target name="test-db-mysql-5.1.0">
		<antcall target="test-db-mysql-common">
			<param name="sql.version" value="5.1.0" />
		</antcall>
	</target>

	<target name="test-db-mysql-5.1.1">
		<antcall target="test-db-mysql-common">
			<param name="sql.version" value="5.1.1" />
		</antcall>
	</target>

	<target name="test-db-mysql-5.1.2">
		<antcall target="test-db-mysql-common">
			<param name="sql.version" value="5.1.2" />
		</antcall>
	</target>

	<target name="test-db-mysql-5.2.0">
		<antcall target="test-db-mysql-common">
			<param name="sql.version" value="5.2.0" />
		</antcall>
	</target>

	<target name="test-db-mysql-5.2.1">
		<antcall target="test-db-mysql-common">
			<param name="sql.version" value="5.2.1" />
		</antcall>
	</target>

	<target name="test-db-mysql-5.2.2">
		<antcall target="test-db-mysql-common">
			<param name="sql.version" value="5.2.2" />
		</antcall>
	</target>

	<target name="test-db-mysql-5.2.3">
		<antcall target="test-db-mysql-common">
			<param name="sql.version" value="5.2.3" />
		</antcall>
	</target>

	<target name="test-db-mysql-common">
		<echo file="test.${user.name}.properties">db.type=mysql</echo>

		<antcall target="prepare-portal-ext-properties" inheritAll="false" />

		<ant dir="portal-impl" target="deploy-properties" inheritAll="false" />

		<if>
			<not>
				<equals arg1="${sql.version}" arg2="$${sql.version}" />
			</not>
			<then>
				<property name="sql.dir" value="sql\legacy\${sql.version}\create\" />
				<property name="sql.file" value="create-mysql.sql" />
			</then>
		</if>

		<antcall target="rebuild-database" inheritAll="false">
			<param name="sql.dir" value="${sql.dir}" />
			<param name="sql.file" value="${sql.file}" />
		</antcall>

		<antcall target="start-selenium" />

		<ant antfile="build-test-tomcat.xml" target="run-tomcat">
			<property name="skip.rebuild-database" value="true" />
			<property name="test.class" value="SmokeTestSuite" />
		</ant>

		<antcall target="stop-selenium" />

		<delete file="test.${user.name}.properties" />
	</target>

	<target name="test-db-mysql-latest">
		<echo file="create-${db.mysql.schema}.sql">drop database if exists lportal;
create database lportal character set utf8;</echo>

		<antcall target="test-db-mysql-common">
			<param name="sql.dir" value="" />
			<param name="sql.file" value="create-${db.mysql.schema}.sql" />
		</antcall>
	</target>
</project>