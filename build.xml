		<antcall target="jar" />
	</target>

	<target name="clean">
		<ant dir="classes" target="clean" inheritAll="false" />

		<ant dir="portal-shared" target="clean" inheritAll="false" />

		<ant dir="util-java" target="clean" inheritAll="false" />
		<ant dir="util-jsf" target="clean" inheritAll="false" />
