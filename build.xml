		<copy todir="${lp.ext.dir}" overwrite="false">
			<fileset
				dir="tools/ext_tmpl"
				includes="**/build.xml,**/META-INF/application.xml,**/WEB-INF/remoting-servlet-ext.xml,**/WEB-INF/server-config.wsdd"
			/>
		</copy>
	</target>

