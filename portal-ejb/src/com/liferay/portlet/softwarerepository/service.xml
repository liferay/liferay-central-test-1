<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 4.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_4_2_0.dtd">

<service-builder root-dir=".." package-path="com.liferay.portlet">
	<portlet name="Software Repository" short-name="SR" />
	<entity name="SRLicense" local-service="false" remote-service="true">

		<!-- PK fields -->

		<column name="licenseId" type="long" primary="true" />

		<!-- Other fields -->

		<column name="name" type="String" />
		<column name="openSource" type="boolean" />
		<column name="url" type="String" />
		<column name="active" type="boolean" />

		<!-- Order -->

		<order by="asc">
			<order-column name="name" />
		</order>

		<!-- Finder methods -->

		<finder name="Active" return-type="Collection">
			<finder-column name="active" />
		</finder>
	</entity>
	<entity name="SRProductEntry" local-service="true" remote-service="true">

		<!-- PK fields -->

		<column name="productEntryId" type="long" primary="true" />

		<!-- Group instance -->

		<column name="groupId" type="String" />

		<!-- Audit fields -->

		<column name="companyId" type="String" />
		<column name="userId" type="String" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="name" type="String" />
		<column name="type" type="String" />
		<column name="shortDescription" type="String" />
		<column name="longDescription" type="String" />
		<column name="version" type="double" />
		<column name="changeLog" type="String" />
		<column name="downloadURL" type="String" />
		<column name="pageURL" type="String" />
		<column name="readCount" type="int" />

		<!-- Relationships -->

		<column name="srLicenses" type="Collection" entity="SRLicense" mapping-table="SRLicenses_SRProductEntries" />

		<!-- Order -->

		<order by="asc">
			<order-column name="name" />
		</order>

		<!-- Finder methods -->

		<finder name="GroupId" return-type="Collection">
			<finder-column name="groupId" />
		</finder>

		<!-- References -->

		<reference package-path="com.liferay.portal" entity="Resource" />
		<reference package-path="com.liferay.portlet.ratings" entity="RatingsStats" />
	</entity>
	<entity name="SRProductVersion" local-service="true" remote-service="true">

		<!-- PK fields -->

		<column name="productVersionId" type="long" primary="true" />

		<!-- Audit fields -->

		<column name="userId" type="String" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="productEntryId" type="long" />
		<column name="version" type="double" />
		<column name="changeLog" type="String" />
		<column name="downloadURL" type="String" />
		<column name="pageURL" type="String" />

		<!-- Order -->

		<order by="desc">
			<order-column name="version" />
		</order>

		<!-- Finder methods -->

		<finder name="ProductEntryId" return-type="Collection">
			<finder-column name="productEntryId" />
		</finder>
	</entity>
</service-builder>