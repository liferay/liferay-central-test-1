<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 4.0.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_4_0_0.dtd">

<service-builder root-dir=".." package-path="com.liferay.portlet">
	<portlet name="Blogs" short-name="Blogs" />
	<entity name="BlogsCategory" local-service="true" remote-service="true">

		<!-- PK fields -->

		<column name="categoryId" type="String" primary="true" />

		<!-- Audit fields -->

		<column name="companyId" type="String" />
		<column name="userId" type="String" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="parentCategoryId" type="String" />
		<column name="name" type="String" />
		<column name="description" type="String" />

		<!-- Order -->

		<order by="asc">
			<order-column name="name" case-sensitive="false" />
		</order>

		<!-- Finder methods -->

		<finder name="ParentCategoryId" return-type="Collection">
			<finder-column name="parentCategoryId" />
		</finder>

		<!-- References -->

		<reference package-path="com.liferay.portal" entity="Resource" />
	</entity>
	<entity name="BlogsEntry" local-service="true" remote-service="true">

		<!-- PK fields -->

		<column name="entryId" type="String" primary="true" />

		<!-- Group instance -->

		<column name="groupId" type="String" />

		<!-- Audit fields -->

		<column name="companyId" type="String" />
		<column name="userId" type="String" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="categoryId" type="String" />
		<column name="title" type="String" />
		<column name="content" type="String" />
		<column name="displayDate" type="Date" />

		<!-- Order -->

		<order by="desc">
			<order-column name="displayDate" />
		</order>

		<!-- Finder methods -->

		<finder name="GroupId" return-type="Collection">
			<finder-column name="groupId" />
		</finder>
		<finder name="CompanyId" return-type="Collection">
			<finder-column name="companyId" />
		</finder>
		<finder name="CategoryId" return-type="Collection">
			<finder-column name="categoryId" />
		</finder>

		<!-- References -->

		<reference package-path="com.liferay.portal" entity="Contact" />
		<reference package-path="com.liferay.portal" entity="Resource" />
		<reference package-path="com.liferay.portlet.messageboards" entity="MBMessage" />
	</entity>
	<exceptions>
		<exception>CategoryName</exception>
		<exception>EntryContent</exception>
		<exception>EntryDisplayDate</exception>
		<exception>EntryTitle</exception>
	</exceptions>
</service-builder>