<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 4.3.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_4_3_0.dtd">

<service-builder root-dir=".." package-path="com.liferay.portlet">
	<portlet name="Message Boards" short-name="MB" />
	<entity name="MBCategory" local-service="true" remote-service="true">

		<!-- PK fields -->

		<column name="categoryId" type="String" primary="true" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="String" />
		<column name="userId" type="String" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="parentCategoryId" type="String" />
		<column name="name" type="String" />
		<column name="description" type="String" />
		<column name="lastPostDate" type="Date" />

		<!-- Order -->

		<order by="asc">
			<order-column name="parentCategoryId" />
			<order-column name="name" case-sensitive="false" />
		</order>

		<!-- Finder methods -->

		<finder name="GroupId" return-type="Collection">
			<finder-column name="groupId" />
		</finder>
		<finder name="CompanyId" return-type="Collection">
			<finder-column name="companyId" />
		</finder>
		<finder name="G_P" return-type="Collection">
			<finder-column name="groupId" />
			<finder-column name="parentCategoryId" />
		</finder>

		<!-- References -->

		<reference package-path="com.liferay.portal" entity="Contact" />
		<reference package-path="com.liferay.portal" entity="Resource" />
	</entity>
	<entity name="MBDiscussion" local-service="false" remote-service="false">

		<!-- PK fields -->

		<column name="discussionId" type="String" primary="true" />

		<!-- Other fields -->

		<column name="className" type="String" />
		<column name="classPK" type="String" />
		<column name="threadId" type="String" />

		<!-- Finder methods -->

		<finder name="C_C" return-type="MBDiscussion">
			<finder-column name="className" />
			<finder-column name="classPK" />
		</finder>
	</entity>
	<entity name="MBMessage" local-service="true" remote-service="true">

		<!-- PK fields -->

		<column name="topicId" type="String" primary="true" />
		<column name="messageId" type="String" primary="true" />

		<!-- Audit fields -->

		<column name="companyId" type="String" />
		<column name="userId" type="String" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="categoryId" type="String" />
		<column name="threadId" type="String" />
		<column name="parentMessageId" type="String" />
		<column name="subject" type="String" />
		<column name="body" type="String" />
		<column name="attachments" type="boolean" />
		<column name="anonymous" type="boolean" />

		<!-- Order -->

		<order by="asc">
			<order-column name="createDate" />
			<order-column name="messageId" />
		</order>

		<!-- Finder methods -->

		<finder name="CategoryId" return-type="Collection">
			<finder-column name="categoryId" />
		</finder>
		<finder name="ThreadId" return-type="Collection">
			<finder-column name="threadId" />
		</finder>
		<finder name="C_T" return-type="Collection">
			<finder-column name="categoryId" />
			<finder-column name="threadId" />
		</finder>
		<finder name="T_P" return-type="Collection">
			<finder-column name="threadId" />
			<finder-column name="parentMessageId" />
		</finder>

		<!-- References -->

		<reference package-path="com.liferay.portal" entity="Resource" />
		<reference package-path="com.liferay.portal" entity="Subscription" />
		<reference package-path="com.liferay.portal" entity="User" />
		<reference package-path="com.liferay.portlet.tags" entity="TagsAsset" />
	</entity>
	<entity name="MBMessageFlag" local-service="true" remote-service="false">

		<!-- PK fields -->

		<column name="topicId" type="String" primary="true" />
		<column name="messageId" type="String" primary="true" />
		<column name="userId" type="String" primary="true" />

		<!-- Other fields -->

		<column name="flag" type="String" />

		<!-- Finder methods -->

		<finder name="TopicId" return-type="Collection">
			<finder-column name="topicId" />
		</finder>
		<finder name="UserId" return-type="Collection">
			<finder-column name="userId" />
		</finder>
		<finder name="T_M" return-type="Collection">
			<finder-column name="topicId" />
			<finder-column name="messageId" />
		</finder>
		<finder name="T_U" return-type="Collection">
			<finder-column name="topicId" />
			<finder-column name="userId" />
		</finder>
	</entity>
	<entity name="MBStatsUser" local-service="true" remote-service="false">

		<!-- PK fields -->

		<column name="groupId" type="long" primary="true" />
		<column name="userId" type="String" primary="true" />

		<!-- Other fields -->

		<column name="messageCount" type="int" />
		<column name="lastPostDate" type="Date" />

		<!-- Order -->

		<order by="desc">
			<order-column name="messageCount" />
		</order>

		<!-- Finder methods -->

		<finder name="GroupId" return-type="Collection">
			<finder-column name="groupId" />
		</finder>
		<finder name="UserId" return-type="Collection">
			<finder-column name="userId" />
		</finder>
		<finder name="G_M" return-type="Collection">
			<finder-column name="groupId" />
			<finder-column name="messageCount" comparator="!=" />
		</finder>
	</entity>
	<entity name="MBThread" local-service="true" remote-service="false">

		<!-- PK fields -->

		<column name="threadId" type="String" primary="true" />

		<!-- Other fields -->

		<column name="categoryId" type="String" />
		<column name="topicId" type="String" />
		<column name="rootMessageId" type="String" />
		<column name="messageCount" type="int" />
		<column name="viewCount" type="int" />
		<column name="lastPostByUserId" type="String" />
		<column name="lastPostDate" type="Date" />
		<column name="priority" type="double" />

		<!-- Order -->

		<order by="desc">
			<order-column name="priority" />
			<order-column name="lastPostDate" />
		</order>

		<!-- Finder methods -->

		<finder name="CategoryId" return-type="Collection">
			<finder-column name="categoryId" />
		</finder>
	</entity>
	<exceptions>
		<exception>CategoryName</exception>
		<exception>MessageBody</exception>
		<exception>MessageSubject</exception>
		<exception>RequiredMessage</exception>
	</exceptions>
</service-builder>
