<?xml version="1.0"?>
<!DOCTYPE orion-application PUBLIC "-//Evermind//DTD J2EE Application runtime 1.2//EN" "http://www.orionserver.com/dtds/orion-application.dtd">

<orion-application>
	<library path="counter-ejb.jar" />
	<library path="documentlibrary-ejb.jar" />
	<library path="lock-ejb.jar" />
	<library path="mail-ejb.jar" />
	<library path="portal-ejb.jar" />

	<mail-session location="mail/MailSession" smtp-host="liferay.com">
		<property name="mail.transport.protocol" value="smtp" />
		<property name="mail.imap.host" value="liferay.com" />
		<property name="mail.imap.fetchsize" value="32" />
		<property name="mail.imap.connectiontimeout" value="30000" />
		<property name="mail.imap.timeout" value="30000" />
		<property name="mail.imap.connectionpoolsize" value="10" />
		<property name="mail.imap.connectionpooltimeout" value="30000" />
		<property name="mail.pop3.host" value="liferay.com" />
	</mail-session>

</orion-application>