<?xml version="1.0"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id="liferaySessionFactory" class="com.liferay.portal.spring.hibernate.HibernateConfiguration"  lazy-init="true"/>
	<bean id="liferayTransactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager" lazy-init="true">
		<property name="sessionFactory">
			<ref bean="liferaySessionFactory" />
		</property>
	</bean>
	<bean id="com.liferay.mail.service.spring.MailService.enterprise" class="com.liferay.portal.spring.ejb.RemoteSessionFactoryBean" lazy-init="true">
		<property name="businessInterface">
			<value>com.liferay.mail.service.spring.MailService</value>
		</property>
		<property name="jndiName">
			<value>com_liferay_mail_service_ejb_MailServiceEJB</value>
		</property>
	</bean>
	<bean id="com.liferay.mail.service.spring.MailService.professional" class="com.liferay.mail.service.impl.MailServiceImpl" lazy-init="true" />
	<bean id="com.liferay.mail.service.persistence.CyrusUserPersistence" class="com.liferay.mail.service.persistence.CyrusUserPersistence" lazy-init="true">
		<property name="dataSource">
			<ref bean="liferayDataSource" />
		</property>
		<property name="sessionFactory">
			<ref bean="liferaySessionFactory" />
		</property>
	</bean>
	<bean id="com.liferay.mail.service.persistence.CyrusUserUtil" class="com.liferay.mail.service.persistence.CyrusUserUtil" lazy-init="true">
		<property name="persistence">
			<ref bean="com.liferay.mail.service.persistence.CyrusUserPersistence" />
		</property>
	</bean>
	<bean id="com.liferay.mail.service.persistence.CyrusVirtualPersistence" class="com.liferay.mail.service.persistence.CyrusVirtualPersistence" lazy-init="true">
		<property name="dataSource">
			<ref bean="liferayDataSource" />
		</property>
		<property name="sessionFactory">
			<ref bean="liferaySessionFactory" />
		</property>
	</bean>
	<bean id="com.liferay.mail.service.persistence.CyrusVirtualUtil" class="com.liferay.mail.service.persistence.CyrusVirtualUtil" lazy-init="true">
		<property name="persistence">
			<ref bean="com.liferay.mail.service.persistence.CyrusVirtualPersistence" />
		</property>
	</bean>
	<bean id="com.liferay.mail.service.spring.MailService.transaction" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean" lazy-init="true">
		<property name="transactionManager">
			<ref bean="liferayTransactionManager" />
		</property>
		<property name="target">
			<ref bean="com.liferay.mail.service.spring.MailService.professional" />
		</property>
		<property name="transactionAttributes">
			<props>
				<prop key="*">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>
	<bean id="com.liferay.mail.service.spring.MailServiceFactory" class="com.liferay.mail.service.spring.MailServiceFactory" lazy-init="true">
		<property name="service">
			<ref bean="com.liferay.mail.service.spring.MailService.enterprise" />
		</property>
	</bean>
</beans>