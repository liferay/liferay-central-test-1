<?xml version="1.0"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<context-param>
		<param-name>axis.servicesPath</param-name>
		<param-value>/axis/</param-value>
	</context-param>
	<context-param>
		<param-name>contextClass</param-name>
		<param-value>com.liferay.portal.spring.context.PortalWebApplicationContext</param-value>
	</context-param>
	<filter>
		<filter-name>Secure AxisServlet Filter</filter-name>
		<filter-class>com.liferay.filters.secure.SecureFilter</filter-class>
		<init-param>
			<param-name>portal_property_prefix</param-name>
			<param-value>axis.servlet.</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>Secure LiferayServlet Filter</filter-name>
		<filter-class>com.liferay.filters.secure.SecureFilter</filter-class>
		<init-param>
			<param-name>portal_property_prefix</param-name>
			<param-value>tunnel.servlet.</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>Secure SpringServlet Filter</filter-name>
		<filter-class>com.liferay.filters.secure.SecureFilter</filter-class>
		<init-param>
			<param-name>portal_property_prefix</param-name>
			<param-value>spring.remoting.servlet.</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>Secure AxisServlet Filter</filter-name>
		<url-pattern>/axis/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>Secure LiferayServlet Filter</filter-name>
		<url-pattern>/liferay/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>Secure SpringServlet Filter</filter-name>
		<url-pattern>/spring/*</url-pattern>
	</filter-mapping>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<servlet>
		<servlet-name>AxisServlet</servlet-name>
		<servlet-class>com.liferay.portal.servlet.AxisServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>LiferayServlet</servlet-name>
		<display-name>LiferayServlet</display-name>
		<servlet-class>com.liferay.portal.servlet.TunnelServlet</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>SpringServlet</servlet-name>
		<servlet-class>com.liferay.portal.spring.servlet.RemotingServlet</servlet-class>
		<load-on-startup>3</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>AxisServlet</servlet-name>
		<url-pattern>/axis/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AxisServlet</servlet-name>
		<url-pattern>/secure/axis/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LiferayServlet</servlet-name>
		<url-pattern>/liferay/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LiferayServlet</servlet-name>
		<url-pattern>/secure/liferay/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SpringServlet</servlet-name>
		<url-pattern>/spring/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SpringServlet</servlet-name>
		<url-pattern>/secure/spring/*</url-pattern>
	</servlet-mapping>
	<session-config>
		<session-timeout>1</session-timeout>
	</session-config>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>/secure/axis/*</web-resource-name>
			<url-pattern>/secure/axis/*</url-pattern>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
		</web-resource-collection>
		<web-resource-collection>
			<web-resource-name>/secure/liferay/*</web-resource-name>
			<url-pattern>/secure/liferay/*</url-pattern>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
		</web-resource-collection>
		<web-resource-collection>
			<web-resource-name>/secure/spring/*</web-resource-name>
			<url-pattern>/secure/spring/*</url-pattern>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>users</role-name>
		</auth-constraint>
		<user-data-constraint>
			<transport-guarantee>NONE</transport-guarantee>
		</user-data-constraint>
	</security-constraint>
	<login-config>
		<auth-method>BASIC</auth-method>
		<realm-name>PortalRealm</realm-name>
	</login-config>
	<security-role>
		<role-name>users</role-name>
	</security-role>
	<ejb-local-ref>
		<ejb-ref-name>ejb/liferay/RoleLocalServiceHome</ejb-ref-name>
		<ejb-ref-type>Session</ejb-ref-type>
		<local-home>com.liferay.portal.service.ejb.RoleLocalServiceHome</local-home>
		<local>com.liferay.portal.service.ejb.RoleLocalServiceEJB</local>
		<ejb-link>com_liferay_portal_service_ejb_RoleLocalServiceEJB</ejb-link>
	</ejb-local-ref>
	<ejb-local-ref>
		<ejb-ref-name>ejb/liferay/UserLocalServiceHome</ejb-ref-name>
		<ejb-ref-type>Session</ejb-ref-type>
		<local-home>com.liferay.portal.service.ejb.UserLocalServiceHome</local-home>
		<local>com.liferay.portal.service.ejb.UserLocalServiceEJB</local>
		<ejb-link>com_liferay_portal_service_ejb_UserLocalServiceEJB</ejb-link>
	</ejb-local-ref>
</web-app>