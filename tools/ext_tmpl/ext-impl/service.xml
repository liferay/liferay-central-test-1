<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 4.3.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_4_3_0.dtd">

<service-builder root-dir=".." package-path="com.ext.portlet">
	<portlet name="Reports" short-name="Reports" />
	<entity name="ReportsEntry" local-service="false" remote-service="true" persistence-class="com.ext.portlet.reports.service.persistence.ReportsEntryPersistence">

		<!-- PK fields -->

		<column name="entryId" type="String" primary="true" />

		<!-- Audit fields -->

		<column name="companyId" type="String" />
		<column name="userId" type="String" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="name" type="String" />

		<!-- Order -->

		<order by="asc">
			<order-column name="name" case-sensitive="false" />
		</order>

		<!-- Finder methods -->

		<finder name="CompanyId" return-type="Collection">
			<finder-column name="companyId" />
		</finder>
		<finder name="UserId" return-type="Collection">
			<finder-column name="userId" />
		</finder>

		<!-- References -->

		<reference package-path="com.liferay.portal" entity="User" />
	</entity>
	<exceptions>
		<exception>EntryName</exception>
	</exceptions>
</service-builder>